<h1 class="text-center">{{title}}</h1>

<div class="row justify-content-center mt-4">
  <div class="col-md-8">
    <form action="/exchange-rate" method="GET" class="mb-4">
      <div class="input-group">
        <label class="input-group-text" for="baseCurrency">Base Currency:</label>
        <select class="form-select" id="baseCurrency" name="base">
          {{#each ratesWithSelection}}
            <option value="{{currency}}" {{#if isSelected}}selected{{/if}}>{{currency}}</option>
          {{/each}}
        </select>
        <button class="btn btn-primary" type="submit">Update</button>
      </div>
    </form>

    <table class="table table-striped table-bordered">
      <thead class="table-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Currency</th>
          <th scope="col">Rate</th>
        </tr>
      </thead>
      <tbody>
        {{#each rates.rates}}
          <tr>
            <th scope="row">{{@index}}</th>
            <td>{{@key}}</td>
            <td>{{this}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>

    <div class="text-center mt-4">
      <p>Base currency: {{rates.base}}</p>
      <p>Date: {{rates.date}}</p>
      <a href="/" class="btn btn-secondary">Back to Home</a>
        {{#if isAdmin}}
        <a href="/admin" class="btn btn-danger ms-2">Admin Panel</a>
      {{/if}}
    </div>
  </div>
</div>